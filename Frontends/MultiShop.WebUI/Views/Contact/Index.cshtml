@model CreateContactDto
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_DefaultLayout.cshtml";
}

<div class="container-fluid">
    <div class="row px-xl-5">
        <div class="col-12">
            <nav class="breadcrumb bg-light mb-30">
                <a class="breadcrumb-item text-dark" href="/Home">Anasayfa</a>
                <span class="breadcrumb-item active">İletişim</span>
            </nav>
        </div>
    </div>
</div>

<div class="container-fluid">
    <h2 class="section-title position-relative text-uppercase mx-xl-5 mb-4"><span class="bg-secondary pr-3">Bize Yazın</span></h2>
    <div class="row px-xl-5">
        <div class="col-lg-7 mb-5">
            <div class="contact-form bg-light p-30">
                <div id="success"></div>
                
                <form method="post">

                    <div class="control-group mb-3">
                        <input type="text" class="form-control" placeholder="Ad Soyad" asp-for="NameSurname" required/>
                    </div>

                    <div class="control-group mb-3">
                        <input type="email" class="form-control" placeholder="E-Posta" asp-for="Email" required />
                        <p class="help-block text-danger"></p>
                    </div>

                    <div class="control-group mb-3">
                        <input type="text" class="form-control" placeholder="Konu" asp-for="Subject" required />
                        <p class="help-block text-danger"></p>
                    </div>
                    
                    <div class="control-group mb-3">
                        <textarea class="form-control" rows="8" placeholder="Mesaj..." asp-for="Message" required ></textarea>
                        <p class="help-block text-danger"></p>
                    </div>
                    
                    <div>
                        <button class="btn btn-primary py-2 px-4" type="submit">Gönder</button>
                    </div>
                </form>

            </div>
        </div>
        <div class="col-lg-5 mb-5">
            <div class="bg-light p-30 mb-30">
                <iframe style="width: 100%; height: 250px; border:0;" src="@ViewBag.Map" frameborder="0" allowfullscreen="" aria-hidden="false" tabindex="0"></iframe>
            </div>
            <div class="bg-light p-30 mb-3">
                <p class="mb-2"><i class="fa fa-map-marker-alt text-primary mr-3"></i>@ViewBag.Adres</p>
                <p class="mb-2"><i class="fa fa-envelope text-primary mr-3"></i>@ViewBag.Mail</p>
                <p class="mb-2"><i class="fa fa-phone-alt text-primary mr-3"></i>@ViewBag.Telefon</p>
            </div>
        </div>
    </div>
</div>