@model CreateRegisterDto
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8">
	<title>MultiShop - Kayıt</title>
	<meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
	<link rel="stylesheet" type="text/css" href="~/auth-assets/css/opensans-font.css">
	<link rel="stylesheet" type="text/css" href="~/auth-assets/fonts/line-awesome/css/line-awesome.min.css">
    <link rel="stylesheet" href="~/auth-assets/css/style.css"/>
</head>
<body class="form-v4">
	<div class="page-content">
		<div class="form-v4-content">
			<div class="form-left">
				<h2>MultiShop E-Ticaret</h2>
				<p class="text-1">MultiShop üzerinden eticaret işlemlerini gerçekleştirebilmek, indirimli ürünler ve fırsatlardan haberdar olmak için 1 dakikada kayıt işlemini gerçekleştirebilirsiniz.</p>
				<div class="form-left-last">
					<a href="/Auth/Login"><input type="submit" class="account" value="Giriş Yap"></a>
				</div>
			</div>
			<form class="form-detail" method="post">
				@Html.AntiForgeryToken()

				<h2>KAYIT OL</h2>
				<div class="form-group">
					<div class="form-row form-row-1">
						<label>Ad</label>
						<input asp-for="Name" type="text" class="input-text" required>
					</div>
					<div class="form-row form-row-1">
						<label>Soyad</label>
						<input asp-for="Surname" type="text" class="input-text" required>
					</div>
				</div>
				<div class="form-row">
					<label>E-Posta</label>
					<input asp-for="Email" type="text" class="input-text" required>
				</div>
				<div class="form-row">
					<label>Kullanıcı Adı</label>
					<input asp-for="Username" type="text" class="input-text" required>
				</div>
				<div class="form-group">
					<div class="form-row form-row-1 ">
						<label>Şifre</label>
						<input asp-for="Password" type="password" class="input-text" required>
					</div>
					<div class="form-row form-row-1">
						<label>Şifre Tekrar</label>
						<input asp-for="ConfirmPassword" type="password" class="input-text" required>
					</div>
				</div>
				<div class="form-checkbox">
					<label class="container"><p>Şartları kabul ediyorum.</p>
					  	<input type="checkbox" required>
					  	<span class="checkmark"></span>
					</label>
				</div>
				<div class="form-row-last">
					<input type="submit" class="register" value="Kayıt Ol">
				</div>
			</form>
		</div>
	</div>
</body>
</html>
