<div class="col-lg-4">
    <form class="mb-30" method="post" asp-controller="Discount" asp-action="ConfirmDiscountCoupon">
        <div class="input-group">
            <input type="text" name="code" class="form-control border-0 p-4" placeholder="Kupon Kodu">
            <div class="input-group-append">
                <button class="btn btn-primary">Kuponu Uygula</button>
                <br />
                <h3>Kod: @ViewBag.Code</h3>
            </div>
        </div>
    </form>
    <h5 class="section-title position-relative text-uppercase mb-3"><span class="bg-secondary pr-3">Sepet Özeti</span></h5>
    <div class="bg-light p-30 mb-5">
        <div class="border-bottom pb-2">
            <div class="d-flex justify-content-between mb-3">
                <h6>Sepet Tutarı</h6>
                <h6>₺@ViewBag.TotalPrice</h6>
            </div>
            <div class="d-flex justify-content-between mb-3">
                <h6 class="font-weight-medium">KDV (%20)</h6>
                <h6 class="font-weight-medium">₺@ViewBag.TaxPrice</h6>
            </div>
            <div class="d-flex justify-content-between mb-3">
                <h6 class="font-weight-medium">Ara Toplam</h6>
                <h6 class="font-weight-medium">₺@ViewBag.TotalPriceWithTax</h6>
            </div>
            <div class="d-flex justify-content-between">
                <h6 class="font-weight-medium">İndirim Oranı</h6>
                <h6 class="font-weight-medium">%@ViewBag.DiscountRate</h6>
            </div>
        </div>
        <div class="pt-2">
            <div class="d-flex justify-content-between mt-2">
                <h5>Toplam</h5>
                <h5>₺25</h5>
            </div>
            <button class="btn btn-block btn-primary font-weight-bold my-3 py-3">Ödeme Adımına Geç</button>
        </div>



    </div>
</div>