@model CreateFeatureSliderDto
@{
    ViewData["Title"] = "CreateFeatureSlider";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<section class="content container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="chart-box">
                <h4>Slider Oluştur</h4>
                <br />
                <form method="post" asp-action="CreateFeatureSlider" asp-controller="FeatureSlider">
                    <label>Görsel Başlığı</label>
                    <input type="text" class="form-control" asp-for="Title" />
                    <br />

                    <label>Görsel Açıklaması</label>
                    <input type="text" class="form-control" asp-for="Description" />
                    <br />

                    <label>Görsel Link</label>
                    <input type="text" class="form-control" asp-for="ImageUrl" />
                    <br />

                    <button type="submit" class="btn btn-primary">Oluştur</button>
                </form>
            </div>
        </div>
    </div>
</section>

