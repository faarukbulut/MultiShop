@model UpdateUserCommentDto
@{
    ViewData["Title"] = "UpdateComment";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<section class="content container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="chart-box">
                <h4>Yorum Düzenle</h4>
                <br />
                <form method="post" asp-action="UpdateComment" asp-controller="Comment">
                    @Html.HiddenFor(x => x.UserCommentID)
                    @Html.HiddenFor(x => x.ProductID)
                    @Html.HiddenFor(x => x.CreatedDate)

                    <label>Ad Soyad</label>
                    <input type="text" class="form-control" asp-for="NameSurname" />
                    <br />

                    <label>Email</label>
                    <input type="text" class="form-control" asp-for="Email" />
                    <br />

                    <label>Puan</label>
                    <input type="number" class="form-control" asp-for="Rating" />
                    <br />

                    <div class="d-flex">
                        <input type="checkbox" asp-for="Status" />
                        <label>Durum</label>
                    </div>
                    <br />

                    <label>Yorum</label>
                    <textarea rows="5" class="form-control" asp-for="CommentDetail"></textarea>
                    <br />

                    <button type="submit" class="btn btn-primary">Düzenle</button>
                </form>
            </div>
        </div>
    </div>
</section>
