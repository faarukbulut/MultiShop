@model List<ResultSpecialOfferDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<section class="content container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="chart-box">
                <h4>Özel Teklifler</h4>
                <br />
                <div class="bs-example" data-example-id="bordered-table">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>Teklif Başlığı</th>
                                <th>Teklif Alt Başlığı</th>
                                <th>Sil</th>
                                <th>Güncelle</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.Title</td>
                                    <td>@item.SubTitle</td>
                                    <td><a href="/Admin/SpecialOffer/DeleteSpecialOffer/@item.SpecialOfferID" class="btn btn-danger">Sil</a></td>
                                    <td><a href="/Admin/SpecialOffer/UpdateSpecialOffer/@item.SpecialOfferID" class="btn btn-success">Düzenle</a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <a href="/Admin/SpecialOffer/CreateSpecialOffer" class="btn btn-success">Yeni Ekle</a>
                </div>
            </div>
        </div>
    </div>
</section>
