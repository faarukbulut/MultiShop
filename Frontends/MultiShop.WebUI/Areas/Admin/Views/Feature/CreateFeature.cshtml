@model CreateFeatureDto
@{
    ViewData["Title"] = "CreateFeature";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<section class="content container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="chart-box">
                <h4>Öne Çıkan Oluştur</h4>
                <br />
                <form method="post" asp-action="CreateFeature" asp-controller="Feature">
                    <label>Öne Çıkan Adı</label>
                    <input type="text" class="form-control" asp-for="Title" />
                    <br />

                    <label>Icon</label>
                    <input type="text" class="form-control" asp-for="Icon" />
                    <br />

                    <button type="submit" class="btn btn-primary">Oluştur</button>
                </form>
            </div>
        </div>
    </div>
</section>
