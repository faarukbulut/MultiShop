@model CreateBrandDto
@{
    ViewData["Title"] = "CreateBrand";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<section class="content container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="chart-box">
                <h4>Marka Oluştur</h4>
                <br />
                <form method="post" asp-action="CreateBrand" asp-controller="Brand">
                    <label>Marka Adı</label>
                    <input type="text" class="form-control" asp-for="BrandName" />
                    <br />

                    <label>Marka Görsel</label>
                    <input type="text" class="form-control" asp-for="ImageUrl" />
                    <br />

                    <button type="submit" class="btn btn-primary">Oluştur</button>
                </form>
            </div>
        </div>
    </div>
</section>

