@model List<ResultCargoCompanyDto>
@{
    ViewData["Title"] = "CargoCompanyList";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}


<section class="content container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="chart-box">
                <h4>Kargo Şirketleri</h4>
                <br />
                <div class="bs-example" data-example-id="bordered-table">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>Şirket Adı</th>
                                <th>Sil</th>
                                <th>Güncelle</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.CargoCompanyName</td>
                                    <td><a href="/Admin/Cargo/DeleteCargoCompany/@item.CargoCompanyID" class="btn btn-danger">Sil</a></td>
                                    <td><a href="/Admin/Cargo/UpdateCargoCompany/@item.CargoCompanyID" class="btn btn-success">Düzenle</a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <a href="/Admin/Cargo/CreateCargoCompany" class="btn btn-success">Yeni Ekle</a>
                </div>
            </div>
        </div>
    </div>
</section>

